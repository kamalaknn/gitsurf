<div>
  {{#each}}
    <div style="border: 1px solid #ddd;border-radius: 10px;margin: 10px">
      <div class="pull-left" style="padding:20px">
        {{avatar-img width="50px" height="50px" src=author.avatarUrl }}
      </div>
      <div style="padding:20px">{{#link-to 'repo.commits/details' this}}{{sha}}{{/link-to}} - {{format-markdown commit.message}}</div>
    </div>
  {{/each}}
  <li><a {{action 'loadMore'}}>Load more</a></li>
</div>